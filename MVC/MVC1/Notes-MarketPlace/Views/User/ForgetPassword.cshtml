@model Notes_MarketPlace.Models.UserLogin
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes-MarketPlace</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../Content/Front/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="../../Content/Front/css/forget-password/forget.css">
    <link rel="stylesheet" href="../../Content/Front/css/login/responsive.css"><!-- both pages have same type of reponsive css -->
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</head>
<body>
    <section id="forgetpassword">
        <div class="content-box-lg">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-12 text-center" id="top-logo">
                        <img src="../../Content/Front/images/top-logo.png" alt="logo" class="img-resposive">
                    </div>
                    @using (Html.BeginForm("ForgetPassword", "User", FormMethod.Post))
                    {
                        <div class="col-md-12 col-sm-12 col-12">
                            <div id="forget-box">
                                <div id="heading" class="text-center">
                                    <h2>Forgot Password?</h2>
                                    <p>Enter your Email to reset password</p>
                                </div>
                                <div class="col-md-12 col-sm-12 col-12">
                                    <div class="form-group">

                                        @Html.LabelFor(m => m.EmailID, "Email", new { @id = "email" })
                                        @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @placeholder = "notesmarketplace@gmail.com", type = "email" })
                                        <p class="incorrect-email">@Html.ValidationMessageFor(m => m.EmailID)</p>
                                        <p class="incorrect-email">@Html.ValidationMessage("EmailExist")</p>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <button type="submit" class="btn btn-block btn-general">Submit</button>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </section>
    <script src="../../Content/Front/js/jquery.min.js"></script>
    <script src="../../Content/Front/js/bootstrap.min.js"></script>
</body>
</html>
