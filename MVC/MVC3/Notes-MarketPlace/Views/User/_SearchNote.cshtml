@model  Notes_MarketPlace.Models.SearchNotes

<div id="books">
@if (Model != null && Model.newGetSellerNotesDetails_Results != null && Model.newGetSellerNotesDetails_Results.Count() > 0)
{
    
    double dblPageCount = (double)((decimal)Model.TotalRecords / decimal.Parse(Model.PageSize));
    int pageCount = (int)Math.Ceiling(dblPageCount);
    <div class="books">

        @foreach (var note in Model.newGetSellerNotesDetails_Results)
        {
            <div class="card" onclick="window.location.href='@Url.Action("NotesDetails", "User", new { Id = note.ID })'">

                <img src="~/Content/Front/images/Search/1.jpg" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@note.Title</h5>
                    <div class="card-text">
                        @if (note.UniversityName != null)
                        {
                            <img src="../../Content/Front/images/images/university.png">
                            <span>
                                @note.UniversityName,
                            </span><br>
                        }
                        @if (note.NumberOfPages != null)
                        {
                            <img src="../../Content/Front/images/images/pages.png"><span>@note.NumberOfPages Pages</span><br>
                        }
                        @if (note.PublishedDate != null)
                        {
                            <img src="../../Content/Front/images/images/calendar.png"><span>@note.PublishedDate</span><br>
                        }
                        @if (note.Report != null)
                        {
                            <img src="../../Content/Front/images/images/flag.png">
                            <span class="flag">
                                @note.Report users marked this note as
                                inappropriate
                            </span>
                        }

                        <div class="book-rating">
                            @if (note.Rating != null)
                            {
                                for (int i = 0; i < (int)note.Rating; i++)
                                {
                                    <img src="../../Content/Front/images/images/star.png">
                                }

                                for (int i = (int)note.Rating; i < 5; i++)
                                {
                                    <img src="../../Content/Front/images/images/star-white.png">
                                }
                            }
                            else
                            {
                                for (int i = 0; i < 5; i++)
                                {
                                    <img src="../../Content/Front/images/images/star-white.png">
                                }
                            }
                            @if (note.Rating != null)
                            {
                                <span>@note.TotalRating Reviews</span>
                            }
                            else
                            {
                                <span> 0 Reviews </span>
                            }
                        </div>
                    </div>
                </div>
            </div>

        }
